@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix : <http://example.org/ns/dcat-ap-ext#> .

# Base DCAT-AP Constraints (from original run.sh)

:DatasetShape a sh:NodeShape ;
  sh:targetClass dcat:Dataset ;
  sh:property [
    sh:path dct:title ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path dcat:distribution ;
    sh:minCount 1 ;
  ] .

:DistributionShape a sh:NodeShape ;
  sh:targetClass dcat:Distribution ;
  sh:property [
    sh:path dcat:accessURL ;
    sh:minCount 1 ;
  ] .

# Extension Constraints

:ExtensionShape a sh:NodeShape ;
    sh:targetClass :SomeExtendedClass ;
    sh:property [
        sh:path :someProperty ;
        sh:minCount 1 ;
        sh:message "Extended class must have someProperty." ;
    ] .
